---
import Footer from "../components/Footer.astro";
import Test from "../components/Test.astro";
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="src//style.css" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link 
     href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" 
     rel="stylesheet"
    />
		<title>IMDb: Ratings, Reviews, and Where to Watch the Best Movies & TV Shows</title>
	</head>
	<body class="text-white">
		<header class="flex justify-center gap-9 m-0 border-0 bg-gray-800 pt-3 pb-3">
			<img src="/public/images/IMDb ico.jpg"/>

			<nav class="flex w-3/6">
				<label class="menu flex gap-2">
					<img class="mt-2 w-7 h-7" src="data:image/png;base64,"/>
					<button  class="mr-5 text-lg"><strong>Menu</strong></button>
				</label>


				<button class="btn bg-gray-200" id="btn">
					<strong class="text-black">All</strong>
					<i class="bx bx-chevron-down text-black" id="arrow"></i>
				</button>
				<div class="dropdown" id="dropdown">
					<a href="#create">
						<i class='bx bx-search text-black'></i>
						&nbsp;All
					  </a>
					<a href="#create">
						<i class='bx bxs-film'></i>
					  &nbsp;Titles
					</a>
					<a href="#draft">
					  <i class='bx bx-tv' ></i>
					  &nbsp;TV Episodes
					</a>
					<a href="#move">
					  <i class="bx bx-folder"></i>
					  &nbsp;Celebs
					</a>
					<a href="#profile">
					  <i class='bx bxs-buildings'></i>
					  &nbsp;Companies
					</a>
					<a href="#notification" >
						<i class='bx bxs-label'></i>
					  &nbsp;Keywords
					</a>
					<a class="border-black border-t-2" href="#settings">
						<i class='bx bx-file-find'></i>
					  &nbsp;Advanced Search
					</a>
				  </div>
				
				
				<input class="pl-3 w-3/4" placeholder="Search IMDb"/>
				<button class="bg-white pr-3 rounded-r-lg"><i class='bx bx-search text-black'></i></button>
			</nav>
			
			<button class="menu">IMDbPro</button>
			<button class="menu">Watchlist</button>
			<button class="menu">Sign In</button>
			<button class="menu">Use App</button>
		</header>
		<Test></Test>
		<section class="flex justify-center">
			<Footer></Footer>
		</section>
		<script src="../script.js"></script>
	</body>
</html>
